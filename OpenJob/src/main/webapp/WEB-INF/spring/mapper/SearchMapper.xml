<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.open.job.IDAO.SearchDAO">
<select id="getAllPostList" resultType="com.open.job.DTO.Post">
	SELECT * FROM Post
</select>
<select id="getSearchPostList" resultType="com.open.job.DTO.Post" parameterType="Map">
	SELECT * FROM Post
	<where>
			<choose>
				<when test='searchOpt eq "post"'>
					title LIKE '%${searchWord}%'
				</when>
				<when test='searchOpt eq "all"'>
					title LIKE '%${searchWord}%'
				</when>
			</choose>
		</where>
</select>
</mapper>